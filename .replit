modules = ["c-clang14", "nodejs-20", "rust-stable", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["capnproto", "freetype", "glibcLocales", "gmp", "lcms2", "libffi", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "pkg-config", "tcl", "tk", "xsimd", "zlib"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "The Pound Web UI"

[[workflows.workflow]]
name = "The Pound Web UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 demo_pond.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "demo_pond.py"]
